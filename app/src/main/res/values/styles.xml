<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="PickerStyle">
        <item name="android:textSize">25sp</item>
    </style>
    <!--Add your custom theme here -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#ccff33</item>
        <item name="android:button">@color/black</item>
    </style>
    <style name="Ytheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>


    <style name="GreenTheme" parent="Base.AppTheme.GreenTheme"/>
    <style name="Base.AppTheme.GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#008000</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="YellowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>